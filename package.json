{
  "name": "img2num-workspace",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.29.1",
  "engines": {
    "pnpm": ">=10"
  },
  "scriptsInfo": {
    "_meta": {
      "basic": [
        "format",
        "lint",
        "help"
      ]
    },
    "Formatting": {
      "format": {
        "desc": "Format C++ and JavaScript/TypeScript code",
        "args": [
          "--check   Only check formatting without modifying files"
        ]
      },
      "format:check": {
        "desc": "Runs \"format\" script with the \"--check\" flag"
      },
      "format:cpp": {
        "desc": "Format C++ code"
      },
      "format:cpp:check": {
        "desc": "Format C++ code (read-only)"
      },
      "format:js": {
        "desc": "Format JavaScript/TypeScript"
      },
      "format:js:check": {
        "desc": "Format JavaScript/TypeScript (read-only)"
      }
    },
    "Linting": {
      "eslint": {
        "desc": "Run ESLint on example apps, scripts, and docs",
        "args": [
          "--fix   Automatically fix fixable issues"
        ]
      },
      "eslint:fix": {
        "desc": "Run ESLint and automatically fix issues"
      }
    },
    "Validation": {
      "validate-scripts": {
        "desc": "Validate all scripts defined in workspace package.json files"
      }
    },
    "Other": {
      "help": {
        "desc": "Show this help message",
        "args": [
          "--filter <term>   Only show scripts matching <term>"
        ]
      },
      "editorconfig:check": {
        "desc": "Check all files against .editorconfig rules"
      }
    }
  },
  "scripts": {
    "help": "node scripts/help.js",
    "format": "node scripts/format.js",
    "format:check": "node scripts/format.js --check",
    "format:cpp": "node scripts/format-cpp.js",
    "format:cpp:check": "node scripts/img2num-dev-scripts/format-cpp.js",
    "format:js": "pnpm prettier --write . --ignore-path .prettierignore --config .prettierrc",
    "format:js:check": "pnpm prettier --check . --ignore-path .prettierignore --config .prettierrc",
    "validate-scripts": "node scripts/img2num-dev-scripts/validate-scripts.js",
    "eslint": "eslint packages/js example-apps/react-js scripts/img2num-dev-scripts docs",
    "eslint:fix": "eslint packages/js example-apps/react-js scripts/img2num-dev-scripts docs --fix",
    "editorconfig:check": "editorconfig-checker"
  },
  "devDependencies": {
    "clang-format": "^1.8.0",
    "editorconfig-checker": "^6.1.1",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "globals": "^17.3.0",
    "img2num-dev-scripts": "workspace:*",
    "prettier": "^3.8.1"
  },
  "dependencies": {
    "fast-glob": "^3.3.3"
  }
}
